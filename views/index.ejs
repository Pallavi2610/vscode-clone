<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <div class="left">
      <form action="createfile" method="post">
        <input type="text" placeholder="enter filename with extension" name="filename">
      </form>
      <hr/>

      <ul>
       <% files.forEach(function(file,index){ %>
       <li>
        <li><a href="/file/<%= file %>"><%= file%></a></li>
      </li>
       <% }) %>
      </ul>
    </div>
    <div class="right">
      <form action=""><textarea cols="145" rows="38"> <%=filedata %></textarea>
      </form>
    </div>

  </div>
</body>
</html>